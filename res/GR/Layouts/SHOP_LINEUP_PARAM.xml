<?xml version="1.0" encoding="utf-8"?>
<layout>
  <enum name="EquipType" type="u8">
    <item value="0" name="0 - Weapon" />
	<item value="1" name="1 - Armor" />
	<item value="2" name="2 - Accessory" />
    <item value="3" name="3 - Good" />
    <item value="4" name="4 - Ashes" />
  </enum>
  <enum name="CurrencyType" type="s16">
    <item value="0" name="0 - Runes" />
    <item value="1" name="1 - Dragon Heart" />
    <item value="2" name="2 - Starlight Shard" />
    <item value="3" name="3 - Unknown" />
    <item value="4" name="4 - Lost Ashes of War" />
  </enum>
  <entry>
    <name>Equip ID</name>
    <type>s32</type>
    <default>500</default>
  </entry>
  <entry>
    <name>Value</name>
    <type>s32</type>
    <default>-1</default>
  </entry>
  <entry>
    <name>Material ID</name>
    <type>s32</type>
    <default>-1</default>
  </entry>
  <entry>
    <name>Set Event Flag</name>
    <type>s32</type>
    <default>-1</default>
    <description>This event flag is set when the item is purchased.</description>
  </entry>
  <entry>
    <name>Conditional Event Flag</name>
    <type>s32</type>
    <default>-1</default>
    <description>This event flag must be set to ON before the item is visible in the shop menu.</description>
  </entry>
  <entry>
    <name>Quantity Available</name>
    <type>s16</type>
    <default>1</default>
  </entry>
  <entry>
    <name>padding</name>
    <type>dummy8</type>
    <size>1</size>
  </entry>
  <entry>
    <name>Equip Type</name>
    <type>u8</type>
    <default>0</default>
    <enum>EquipType</enum>
  </entry>
  <entry>
    <name>Currency Type</name>
    <type>s16</type>
    <default>0</default>
    <enum>CurrencyType</enum>
  </entry>
  <entry>
    <name>Quantity Produced</name>
    <type>s16</type>
    <default>-1</default>
  </entry>
  <entry>
    <name>padding</name>
    <type>dummy8</type>
    <size>4</size>
  </entry>
  <entry>
    <name>Price Rate</name>
    <type>f32</type>
    <default>1</default>
  </entry>
    <entry>
    <name>Unk4</name>
    <type>s32</type>
    <default>0</default>
  </entry>
  <entry>
    <name>Shop Display ID</name>
    <type>s32</type>
    <default>0</default>
    <description>References a item that has a different description. Used for the Note items so you must buy them first.</description>
  </entry>
  <entry>
    <name>Spell Instruction - Text ID</name>
    <type>s32</type>
    <default>0</default>
  </entry>
  <entry>
    <name>Unk6</name>
    <type>s8</type>
    <default>0</default>
  </entry>
  <entry>
    <name>Unk7</name>
    <type>s8</type>
    <default>0</default>
  </entry>
  <entry>
    <name>padding</name>
    <type>dummy8</type>
    <size>2</size>
  </entry>

</layout>